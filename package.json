{
    "name": "familie-felles-frontend",
    "private": true,
    "repository": "https://github.com/navikt/familie-felles-frontend.git",
    "license": "MIT",
    "scripts": {
        "ct": "git-cz",
        "bootstrap": "lerna bootstrap --use-workspaces --no-ci",
        "build": "lerna run build",
        "storybook": "start-storybook -p 8000",
        "deploy-storybook": "storybook-to-ghpages",
        "lint": "eslint './packages/**/*.{js,ts,tsx}'",
        "lint:fix": "eslint './packages/**/*.{js,ts,tsx}' --fix",
        "publish:ci": "lerna publish -y",
        "publish:canary": "lerna publish --canary",
        "publish:canary:ci": "lerna publish -y --canary"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "lint-staged": {
        "./packages/**/*.{js,ts,tsx}": [
            "eslint --fix"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@storybook/addon-a11y": "^6.0.26",
        "@storybook/addon-actions": "^6.0.26",
        "@storybook/addon-docs": "^6.0.25",
        "@storybook/addon-info": "^5.3.21",
        "@storybook/addon-knobs": "^6.0.26",
        "@storybook/addon-links": "^6.0.26",
        "@storybook/addon-storysource": "^6.0.25",
        "@storybook/react": "^6.0.25",
        "@storybook/storybook-deployer": "^2.8.1",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.0.6",
        "commitizen": "^4.2.1",
        "copyfiles": "^2.4.0",
        "css-loader": "^5.0.1",
        "cz-lerna-changelog": "^2.0.2",
        "eslint": "^7.10.0",
        "eslint-config-airbnb": "^18.1.0",
        "eslint-config-prettier": "^6.12.0",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-react": "^7.21.3",
        "eslint-plugin-react-app": "^6.2.2",
        "lerna": "^3.18.4",
        "less": "^3.10.3",
        "less-loader": "^7.0.1",
        "lint-staged": "^10.4.0",
        "prettier": "^2.1.2",
        "pretty-quick": "^3.0.2",
        "react": "^16.12.0",
        "react-docgen-typescript-loader": "^3.6.0",
        "react-dom": "^16.12.0",
        "react-is": "^16.12.0",
        "rollup-plugin-less": "^1.1.2",
        "style-loader": "^1.3.0",
        "ts-loader": "^8.0.4",
        "tslint": "^6.1.2",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.0.3"
    },
    "workspaces": [
        "packages/*"
    ]
}
