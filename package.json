{
    "name": "familie-felles-frontend",
    "private": true,
    "repository": "https://github.com/navikt/familie-felles-frontend.git",
    "license": "MIT",
    "scripts": {
        "ct": "git-cz",
        "bootstrap": "lerna bootstrap --use-workspaces --no-ci",
        "build": "lerna run build",
        "storybook": "start-storybook -p 8000",
        "deploy-storybook": "storybook-to-ghpages",
        "publish:ci": "lerna publish -y",
        "publish:canary": "lerna publish --canary"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^8.2.0",
        "@commitlint/config-conventional": "^8.2.0",
        "@storybook/addon-a11y": "^5.3.10",
        "@storybook/addon-actions": "^5.3.10",
        "@storybook/addon-docs": "^5.3.10",
        "@storybook/addon-info": "^5.3.10",
        "@storybook/addon-knobs": "^5.3.10",
        "@storybook/addon-links": "^5.3.10",
        "@storybook/addon-storysource": "^5.3.10",
        "@storybook/react": "^5.3.10",
        "@storybook/storybook-deployer": "^2.8.1",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.0.6",
        "commitizen": "^4.0.3",
        "copyfiles": "^2.2.0",
        "css-loader": "^3.4.2",
        "cz-lerna-changelog": "^2.0.2",
        "lerna": "^3.18.4",
        "less": "^3.10.3",
        "less-loader": "^5.0.0",
        "lint-staged": "^10.0.7",
        "prettier": "^1.19.1",
        "pretty-quick": "^2.0.1",
        "react": "^16.12.0",
        "react-docgen-typescript-loader": "^3.6.0",
        "react-dom": "^16.12.0",
        "react-is": "^16.12.0",
        "rollup-plugin-less": "^1.1.2",
        "style-loader": "^1.1.3",
        "ts-loader": "^6.2.1",
        "tsdx": "^0.12.3",
        "tslint": "^6.0.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.7.2"
    },
    "workspaces": [
        "packages/*"
    ]
}
